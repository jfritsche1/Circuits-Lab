RESULTS_AND_ANALYSIS=./results_and_analysis/

FOUR_PT_PROBE=$(RESULTS_AND_ANALYSIS)four_point_probe
TEX_EXT=.tex
FOUR_PT_BDY=$(FOUR_PT_PROBE)$(TEX_EXT)
PREAMBLE_SUFFIX=_preamble
FOUR_PT_PREAMBLE=$(FOUR_PT_PROBE)$(PREAMBLE_SUFFIX)$(TEX_EXT)
WRAP_SUFFIX=_wrap
FOUR_PT_WRAP=$(FOUR_PT_PROBE)$(WRAP_SUFFIX)$(TEX_EXT)
COMPILE_LATEX=pdflatex 
FOUR_PT_COMPILE=$(COMPILE_LATEX) $(FOUR_PT_WRAP)
TABLES_DIR=./tables/
FOUR_PT_DATA_TABLE=$(TABLES_DIR)data_table_4ptprobe.csv
FOUR_PT_RESULTS_TABLE=$(TABLES_DIR)results_table_4ptprobe.csv 
FOUR_PT_TABLES=$(FOUR_PT_DATA_TABLE) $(FOUR_PT_RESULTS_TABLE)
SCRIPTS_DIR=./scripts/
GEN_FOUR_PT_TABLES=$(SCRIPTS_DIR)gen_data.py

DEL=rm -rf

$(FOUR_PT_PROBE): $(FOUR_PT_BDY) $(FOUR_PT_PREAMBLE) $(FOUR_PT_WRAP) $(FOUR_PT_TABLES)
	$(FOUR_PT_COMPILE)
	$(FOUR_PT_COMPILE)

$(FOUR_PT_DATA_TABLE): $(GEN_FOUR_PT_TABLES)

$(FOUR_PT_RESULTS_TABLE): $(GEN_FOUR_PT_TABLES)

$(GEN_FOUR_PT_TABLES):
	$(GEN_FOUR_PT_TABLES)
	

clean:
	$(DEL) *.aux *.log *.pdf
